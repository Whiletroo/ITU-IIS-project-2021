@page "/"
@inherits PageBase

<PageTitle>Index</PageTitle>
<div class="bg-primary">
    <div class="container">
        <div class="row align-items-center g-0">
            <div class="col-xl-5 col-lg-6 col-md-12">
                <div class="py-5 py-lg-0">
                    <h1 class="text-white display-4 fw-bold">
                        Welcome to
                        <br/>
                        Charity Portal
                    </h1>
                    <p class="mb-4 lead" style="color: rgba(255,255,255,.9)">
                        Nothing Great Is Made Alone
                    </p>
                    <NavLink href="/shelters" class="btn btn-success" style="box-shadow: 0 10px 16px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%)">Browse Shelters</NavLink>
                    <NavLink href="/volunteerings" class="btn btn-light" style="box-shadow: 0 10px 16px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%)">Want To Help Manually</NavLink>
                </div>
            </div>
            <div class=" col-xl-7 col-lg-6 col-md-12 text-center">
                <img src="images/dog-intro.png" asp-append-version="true" alt="dog image" class="img-fluid mt-1 mt-md-4" width="35%">
            </div>
        </div>
    </div>
</div>
<section>
    <div class="container" style="padding-top: 2em; padding-bottom: 2em; margin-top: 2em; margin-bottom: 2em;background-color: rgba(241,241,241,.52); border: 2px solid rgba(142,142,142,.14); border-radius: 15px;">
        <div class="row mb-3">
            <div class="col-12 col-md-3">
                <h1 style="font-weight: bold">URGENT</h1>
            </div>
            <div class="col-12 col-md-4" style="display:flex;align-items: flex-end;">
                <p class="lead">Help the animal in need</p>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            @foreach (var donation in DonationList)
            {
                <div class="col mb-5 mb-xxl-1 col-12 col-md-5 col-xl-3">
                    <NavLink href="@("/donations/"+donation.Id)" style="color:black;text-decoration: none">
                        <div class="card mx-auto" style="width: 16rem; height: 100%;cursor:pointer">
                        <div style="max-height: 160px;display: flex;justify-content: center;align-items: center;overflow: hidden">
                            <img class="card-img-top" src="@donation.PhotoURL" alt="Card image cap" style="flex-shrink: 0;min-width: 100%;min-height: 100%">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@donation.Title</h5>
                            <div class="overflow-hidden" style="height: 77px">
                                <p class="card-text">@donation.Description</p>
                            </div>
                            <div class="mt-auto" >
                                <NavLink href="@($"/donations/{donation.Id}")" class="btn btn-primary text-center" style="width: 100%; line-height: 11px">Donate!</NavLink>
                                <div class="progress mt-2">
                                    @if (donation.State >= donation.Goal)
                                    {
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @GetPercents(donation)%" aria-valuenow="@GetPercents(donation)" aria-valuemin="0" aria-valuemax="100"></div>
                                    }
                                    else
                                    {
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: @GetPercents(donation)%" aria-valuenow="@GetPercents(donation)" aria-valuemin="0" aria-valuemax="100"></div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    </NavLink>
                    
                </div>
            }
        </div>
    </div>
</section>

<section>
    <div class="container" style="padding-top: 2em; padding-bottom: 2em; margin-top: 2em; margin-bottom: 2em;background-color: rgba(241,241,241,.52); border: 2px solid rgba(142,142,142,.14); border-radius: 15px;">
        <div class="row mb-3">
            <div class="col-12 col-lg-6 col-xl-4">
                <h1 style="font-weight: bold">Voluntary Work</h1>
            </div>
            <div class="col-12 col-lg-6 col-xl-8" style="display:flex;align-items: flex-end;">
                <p class="lead">Help otherwise</p>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            @foreach (var volunteering in VolunteeringList)
            {
                <div class="col mb-5 mb-xxl-1 col-12 col-md-5 col-xl-3">
                    <NavLink href="@("/volunteerings/"+volunteering.Id)" style="color:black;text-decoration: none" >
                        <div class="card mx-auto" style="width: 16rem; height: 100%;cursor: pointer">
                            <div style="max-height: 160px; display: flex; justify-content: center; align-items: center; overflow: hidden">
                                <img class="card-img-top" src="@volunteering.PhotoURL" alt="Card image cap" style="flex-shrink: 0; min-width: 100%; min-height: 100%">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@volunteering.Title</h5>
                                <div class="overflow-hidden" style="height: 77px">
                                    <p class="card-text">@volunteering.Description</p>
                                </div>
                                <div class="mt-auto">
                                    <NavLink href="@($"/volunteerings/"+volunteering.Id)"class="btn btn-primary text-center" style="width: 100%; line-height: 11px">View details</NavLink>
                                </div>
                            </div>
                        </div>
                    </NavLink>
                </div>
            }
        </div>
    </div>
</section>